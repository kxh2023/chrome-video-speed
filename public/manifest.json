{
  "manifest_version": 3,
  "name": "Video Speed Controller",
  "version": "1.0.0",
  "description": "Adjust the speed of videos playing on the page",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
